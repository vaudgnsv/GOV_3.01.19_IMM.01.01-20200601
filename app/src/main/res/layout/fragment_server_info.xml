<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/timeburnerbold"
        android:gravity="center"
        android:text="Server Info"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <LinearLayout
        android:background="@drawable/setting_background"
        android:layout_margin="8dp"
        android:padding="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/timeburnerbold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary IP :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:textColor="@android:color/black"
                android:fontFamily="@font/timeburnernormal"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginEnd="2dp"
                android:minHeight="45dp"
                android:background="@drawable/under_line_text_view"
                android:clickable="false"
                android:id="@+id/primaryIpLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7" />

            <Button
                android:id="@+id/primaryIpBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/pressed_btn_edit"
                android:text="แก้ไข"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:fontFamily="@font/timeburnerbold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Port :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:textColor="@android:color/black"
                android:fontFamily="@font/timeburnernormal"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginEnd="2dp"
                android:minHeight="45dp"
                android:background="@drawable/under_line_text_view"
                android:clickable="false"
                android:id="@+id/primaryPortLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7" />

            <Button
                android:id="@+id/primaryPortBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/pressed_btn_edit"
                android:text="แก้ไข"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:fontFamily="@font/timeburnerbold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secondary IP :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:textColor="@android:color/black"
                android:fontFamily="@font/timeburnernormal"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginEnd="2dp"
                android:minHeight="45dp"
                android:background="@drawable/under_line_text_view"
                android:clickable="false"
                android:id="@+id/secondaryIPLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7" />

            <Button
                android:id="@+id/secondaryIPBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/pressed_btn_edit"
                android:text="แก้ไข"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:fontFamily="@font/timeburnerbold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secondary Port :" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:textColor="@android:color/black"
                android:fontFamily="@font/timeburnernormal"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginEnd="2dp"
                android:minHeight="45dp"
                android:background="@drawable/under_line_text_view"
                android:clickable="false"
                android:id="@+id/secondaryPortLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7" />

            <Button
                android:id="@+id/secondaryPortBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/pressed_btn_edit"
                android:text="แก้ไข"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>