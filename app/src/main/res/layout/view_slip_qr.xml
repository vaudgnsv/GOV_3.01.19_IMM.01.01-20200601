<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SlipTemplateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/slipNestedScrollView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/printBtn"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/slipLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/bankImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo_image_ktb_bw" />

                    </FrameLayout>

                    <FrameLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">

                        <ImageView
                            android:id="@+id/bank1Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/some_logo_black" />

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/merchantName1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Header Line1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hender_Line" />

                <TextView

                    android:id="@+id/merchantName2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Header Line1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hender_Line" />

                <TextView

                    android:id="@+id/merchantName3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Header Line1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/hender_Line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="TID : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/qrTidLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:gravity="end"
                        android:text="33333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="MID : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/midLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="3333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="BILLER ID : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/billerLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="3333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="BATCH : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/batchLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:gravity="end"
                        android:text="33333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="TRACE : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_weight="1.5"
                        android:id="@+id/traceLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:gravity="end"
                        android:text="33333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/timeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />

                <View

                    android:background="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="INQUIRY No. : "
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_weight="1.3"
                        android:id="@+id/inquiryLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:gravity="end"
                        android:text="33333333"
                        android:textColor="@android:color/black"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/microsoft_sans_serif"
                    android:textColor="@android:color/black"
                    android:text="QR CODE PAYMEMNT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:textColor="@android:color/black"
                        android:text="APPR. CODE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/apprCodeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:gravity="end"
                        android:text="33333333"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="AMT THB : "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/amtThbLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/microsoft_sans_serif"
                        android:text="*234234"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </FrameLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/microsoft_sans_serif"
                    android:text="I ACKNOWLEDGE SATISFACTORY RECEIPT
GOODS/SERVICES AND AGREE TO PAY
TOTAL AMOUNT"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/microsoft_sans_serif"
                    android:text="**** NO REFUND ****"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


</RelativeLayout>